import javafx.application.Application;
import javafx.collections.FXCollections;
import javafx.collections.ObservableList;
import javafx.geometry.Insets;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class NutritionTrackerApp extends Application {

    // List to store food items (as strings)
    private ObservableList<String> foodList = FXCollections.observableArrayList();
    private int totalCalories = 0; // Variable to track total calories
    private Label totalCaloriesLabel; // Label to show total calories

    public static void main(String[] args) {
        launch(args); // Start the application
    }

    @Override
    public void start(Stage stage) {
        // Set up the window
        stage.setTitle(" Nutrition and DietTracker");

        // Create text fields for user input
        TextField foodInput = new TextField();
        foodInput.setPromptText("Enter food name");

        TextField calorieInput = new TextField();
        calorieInput.setPromptText("Enter calories");

        // Button to add food to the list
        Button addButton = new Button("Add Food");

        // Label to display total calories
        totalCaloriesLabel = new Label("Total Calories: 0");

        // ListView to display the food items
        ListView<String> foodListView = new ListView<>(foodList);

       



